{{ form_start(form) }}
<div class="row">
    <div class="col-12 col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6>Information</h6>
            </div>
            <div class="card-body">
                {{ form_row(form.title) }}
                {{ form_row(form.price) }}
                {{ form_row(form.stock) }}
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6>Tags</h6>
            </div>
            <div class="card-body">
                {{ form_widget(form.tags) }}
            </div>
        </div>

    </div>
    <div class="col-md-4 col-12">
        <div class="card shadow mb-4">
            <div class="card-header">{{ 'Image' | trans }}</div>
            <div class="card-body">
                <dl class="row">
                    <div class="col-sm-12">
                        <img class="img-thumbnail w-100" id="product_image_holder" alt="{{ product.title }}"
                             src="{{ '/uploads/' ~ (product.image ?? 'default_placeholder.png') }}">
                    </div>
                </dl>
            </div>
            <div class="card-header">{{ form_row(form.file) }}</div>
        </div>
    </div>
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-footer d-flex justify-content-between">
                <a class="btn btn-secondary" href="{{ path('app_product_index') }}">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-save"></i> {{ button_label|default('Save') }}
                </button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}

<style rel="stylesheet">
    #product_image_holder {
        max-height: 500px;
        object-fit: scale-down;
    }
</style>