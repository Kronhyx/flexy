{% extends 'base.html.twig' %}

{% block caption 'Product' %}
{% block title 'List' %}

{% block toolbar %}
    <a href="{{ path('app_product_new') }}" class="d-none d-sm-inline-block btn btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Create
    </a>
{% endblock %}

{% block body %}
    <div class="card shadow">
        <div class="card-body">
            {% embed '_partials/table.twig' with { items: products } %}
                {% block thead %}
                    <th>Title</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Stock</th>
                {% endblock %}
                {% block tbody %}
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.price }}</td>
                    <td>{{ entity.image }}</td>
                    <td>{{ entity.stock }}</td>
                    <td class="btn-group">
                        <a class="btn btn-primary" href="{{ path('app_product_show', {'id': entity.id}) }}">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-secondary" href="{{ path('app_product_edit', {'id': entity.id}) }}">
                            <i class="fas fa-pen"></i>
                        </a>
                    </td>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
