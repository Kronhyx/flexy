{{ form_start(form) }}
<div class="row">

    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h6 class="m-0">Information</h6>
            </div>
            <div class="card-body">
                {{ form_row(form.name) }}
                {{ form_row(form.products) }}
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body d-flex justify-content-between">
                <a class="btn btn-secondary" href="{{ path('app_tag_index') }}">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-save"></i> {{ button_label|default('Save') }}
                </button>
            </div>
        </div>
    </div>
    {{ form_widget(form) }}

</div>
{{ form_end(form) }}