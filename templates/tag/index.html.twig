{% extends 'base.html.twig' %}

{% block caption 'Tag' %}

{% block title 'List' %}

{% block toolbar %}
    <a href="{{ path('app_tag_new') }}" class="d-inline-block btn btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Create
    </a>
{% endblock %}

{% block body %}
    <div class="card shadow">
        <div class="card-body">
            {% embed '_partials/table.twig' with { items: tags } %}
                {% block thead %}
                    <th>Name</th>
                {% endblock %}
                {% block tbody %}
                    <td>{{ entity.name }}</td>
                    <td class="btn-group">
                        <a class="btn btn-primary" href="{{ path('app_tag_show', {'id': entity.id}) }}">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-secondary" href="{{ path('app_tag_edit', {'id': entity.id}) }}">
                            <i class="fas fa-pen"></i>
                        </a>
                    </td>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
