{% extends 'base.html.twig' %}

{% block caption 'Tag' %}

{% block toolbar %}
    <a href="{{ path('app_tag_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Create
    </a>
{% endblock %}

{% block body %}
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tag in tags %}
                        <tr>
                            <td>{{ tag.id }}</td>
                            <td>{{ tag.name }}</td>
                            <td>
                                <a href="{{ path('app_tag_show', {'id': tag.id}) }}">show</a>
                                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('app_tag_new') }}">Create new</a>
{% endblock %}
