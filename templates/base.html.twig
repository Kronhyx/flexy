<!DOCTYPE html>
<html lang="en" class="bg-gray-200">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A simple symfony example">
    <meta name="author" content="Randy Tellez Galan <kronhyx@gmail.com>">

    <title>{{ block('caption') }} - {% block title %}No Title{% endblock %} - FlexY</title>

    <link href="//fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="//cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="//s3.amazonaws.com/ftwo.prod/ftwo/template/image/icon.png" rel="shortcut icon" type="image/png">
    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}{% endblock %}
</head>

<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    {% include('_partials/sidebar.twig') %}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content" class="bg-gray-200">

            <!-- Topbar -->
            {% include '_partials/navbar.html.twig' %}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            {% block content %}
                <div class="container-fluid px-0 px-md-4">
                    {% for alert in app.flashes('bootstrap') %}
                        <div class="alert alert-{{ alert.type }} alert-dismissible fade show" role="alert">
                            <span>{{ alert.message }}</span>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}

                    <!-- Page Heading -->
                    <div class="px-2 py-1 shadow bg-gray-100 mb-4 rounded" style="opacity: .8">
                        <div class="d-flex align-items-center justify-content-between px-3 px-md-0">
                            <div>
                                <h1 class="h3 mb-2 text-gray-800">{% block caption %}{% endblock %}</h1>
                                <span class="font-italic">{{ block('title') }}</span>
                            </div>
                            <div class="d-flex">{% block toolbar %}{% endblock %}</div>
                        </div>
                    </div>

                    {% block body %}
                        <h1 class="h3 mb-4 text-gray-800">Blank Page</h1>
                    {% endblock %}
                </div>
            {% endblock %}
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<script src="//code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="//stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
{{ encore_entry_script_tags('app') }}
{% block javascripts %}{% endblock %}

</body>

</html>
